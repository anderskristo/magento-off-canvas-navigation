<?xml version="1.0" encoding="UTF-8"?>
<config>
    <modules>
        <Guity_OffCanvas>
            <version>0.0.1</version>
        </Guity_OffCanvas>
    </modules>
    <global>
        <blocks>
            <guity_offcanvas>
                <class>Guity_OffCanvas_Block</class>
            </guity_offcanvas>
        </blocks>
        <page>
            <layouts>
                <custom_layout module="page" translate="label">
                    <label>Offcanvas 1column</label>
                    <template>guity_offcanvas/1column.phtml</template>
                    <layout_handle>offcanvas_1column</layout_handle>
                </custom_layout>
            </layouts>
        </page>
    </global>
    <frontend>
        <layout>
            <updates>
                <guity_offcanvas module="Guity_OffCanvas">
                    <file>guity_offcanvas.xml</file>
                </guity_offcanvas>
            </updates>
        </layout>
    </frontend>
</config>
